{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "*": {
      "type": "object",
      "properties": {
        "todo": {
          "type": "object",
          "properties": {
            "id": {
              "type": "string"
            },
            "todo_name": {
              "type": "string"
            },
            "todo_description": {
              "type": "string"
            },
            "todo_completed": {
              "type": "boolean"
            }
          },
          "required": [
            "todo_name",
            "todo_description",
            "todo_completed"
          ],
          "additionalProperties": false
        }
      },
      "required": [
        "todo"
      ],
      "additionalProperties": false
    }
  }
}