{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$ref": "#/definitions/*",
  "definitions": {
    "*": {
      "type": "object",
      "properties": {
        "todos": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string"
              },
              "todo_name": {
                "type": "string"
              },
              "todo_description": {
                "type": "string"
              },
              "todo_completed": {
                "type": "boolean"
              }
            },
            "required": [
              "todo_name",
              "todo_description",
              "todo_completed"
            ],
            "additionalProperties": false
          }
        }
      },
      "required": [
        "todos"
      ],
      "additionalProperties": false
    }
  }
}